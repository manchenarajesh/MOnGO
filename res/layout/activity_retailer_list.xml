<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:longClickable="true"
    android:orientation="vertical" 
    android:background="@drawable/basic_background">
    
    <LinearLayout
        android:id="@+id/group1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/retailer_offer_list_addItem_offer_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onAddItemClick"
            android:text="@string/add_item_offer" />

                <CheckBox
                    android:id="@+id/retailer_offer_list_hide_checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hide_checked" />
        
    </LinearLayout>
    
    <ListView
        android:id="@+id/retailer_offer_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:longClickable="true" >

    </ListView>

</LinearLayout>
